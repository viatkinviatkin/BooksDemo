<h3 class="ui header">{{t "forms.i-i-s-product-64396-club-meeting-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-product-64396-club-meeting-e.meetingDate-caption"}}</label>
    {{
      flexberry-simpledatetime
      type="date"
      placeholder=(t 'components.flexberry-datepicker.placeholder')
      readonly=readonly
      value=model.meetingDate
      class=(if (v-get validationObject "meetingDate" "isInvalid") "error")
      data-test-i-i-s-product-64396-club-meeting-e-meetingDate=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "meetingDate" "message")}}
  </div>
<div class="field">
    <label>{{t "forms.i-i-s-product-64396-club-meeting-e.btBook-caption"}}</label>
  {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.btBook
      relationName="btBook"
      projection="BtBookL"
    
      readonly=readonly
      componentName="bookLookUp"
      displayAttributeName = "book.title"
      
    }}
</div>
  <div class="field">
    <label>{{t "forms.i-i-s-product-64396-club-meeting-e.report-caption"}}</label>
    {{flexberry-groupedit
      componentName="reportGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.report
      content=model.report
      readonly=readonly
      orderable=false
      class=(if (v-get validationObject "report" "isInvalid") "error")
      data-test-i-i-s-product-64396-club-meeting-e-report=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "report" "message")}}
  </div>
</form>